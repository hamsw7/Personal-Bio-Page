{
  "compilerOptions": {
    "target": "ES6",                     
    "module": "ES6",                     
    "strict": true,                      
    "esModuleInterop": true,             
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                 
    "outDir": "./dist",                  
    "rootDir": "./src",                  
    "allowJs": true,                     
    "noImplicitAny": true,               
    "strictNullChecks": true,            
    "moduleResolution": "node",          
    "resolveJsonModule": true,           
    "sourceMap": true                    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
